  <%= image_tag("logo.png", :class=>"lg", style:"display:block; width:auto; margin: 0 auto; width: 59px; height: 59px;")%><br>
  <h1 id="heading" style="text-align:center; font-weight: bold;">YOU'RE THE BEST!
  </h1>

  <p id="cn" style="text-align: center;">Grateful for your kindness in support for
    <%= @beneficiary_name%></p>
  <p id="kushoto" style="float:left;">
    <a href="https://www.crowdfrica.org/campaigns/<%= @campaign_id%>" target="_blank"><%= @project_name%></a>
  </p>
  <p id="kulia" style="float: right;">You Donate $<%= @donation.amount%></p><br><br><br>
