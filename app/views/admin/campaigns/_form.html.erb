<h2>Campaign Details</h2>
<%= form_for [:admin, @campaign] do |f| %>
  <%= render 'admin/shared/error_messages', resource: @campaign %>
  <div class='form-group'>
    <%= f.label :campaign_name %>
    <%= f.text_field :campaign_name, autofocus: true, required: true, class: 'form-control' %>
  </div>
  <div class='form-group margin-top-sm'>
    <%= f.label :campaign_headline %>
    <%= f.text_area :campaign_headline, autofocus: true, size: '60x10', required: true %>
  </div>
  <div class='form-group margin-top-sm'>
    <%= f.label 'Campaign Image Url' %>
    <%= f.text_field :campaign_image_url, class: 'form-control' %>
  </div>
  <div class='form-group margin-top-sm'>
    <%= f.label 'Youtube Video key' %>
    <%= f.text_field :campaign_video_url, class: 'form-control' %>
  </div>
  <div class='form-group margin-top-sm'>
    <p> <%= f.check_box :published, checked_value: 1, unchecked_value: 0 %>
        <%= f.label "Publish" %></p>
  </div>

  <%= f.hidden_field :project_id, value: params[:project] %>
  <div class='form-group'>
    <%= f.submit :class=>"btn btn-crwd-primary" %>
  </div>
<% end %>
