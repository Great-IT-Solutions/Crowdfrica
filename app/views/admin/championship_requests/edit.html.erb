<%= form_for @championship_request, url: { action: 'update' } do |f| %>
  <div class="col-lg-12 col-md-12 col-sm-12 padding-reset">
    <div class="form-group margin-top-sm col-lg-3 col-md-3 col-sm-12 padding-reset">
      <%= f.label :relationship, 'Relationship to beneficiary' %><br />
      <%= f.text_field :relationship, required: true, class: 'form-control'%>
    </div>
  </div>
  <div class="col-lg-12 col-md-12 col-sm-12 padding-reset form-group margin-top-sm">
    <%= f.label :reason, 'Why do you want to champion this campaign' %><br />
    <%= f.text_field :reason, autofocus: true, required: true, class: 'form-control' %>
  </div>
  <div class="col-lg-12 col-md-12 col-sm-12 padding-reset form-group margin-top-sm">
    <%= f.label :reason, 'Please write a message which will persuade people to donate' %><br />
    <%= f.text_field :message, autofocus: true, required: true, class: 'form-control' %>
  </div>
  <div class="col-lg-12 col-md-12 col-sm-12 padding-reset form-group form-group margin-top-sm">
    <%= f.submit class: 'btn btn-crwd-primary' %>
  </div>
<% end %>
