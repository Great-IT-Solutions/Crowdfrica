<div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="signupModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h3 class="modal-title text-center" id="signupModalLabel">Sign Up</h3>
      </div>
      <div class="modal-body row">

        <div class="text-center margin-top-sm">
           <%= link_to "<i class='fa fa-facebook-official fa-lg margin-right-md'></i>Continue with Facebook".html_safe, donor_facebook_omniauth_authorize_path,:class=>"btn btn-lg btn-facebook" %>
        </div>
        <div class="word-with-line text-center">
          <span>Or</span>
        </div>
        <div class="col-lg-offset-1 col-md-offset-1 col-lg-10 col-md-10 col-sm-12">
          <%= form_for(Donor.new, as: :donor, url: registration_path(:donor),:remote=>true,:html=>{:id=>'sign_up'}) do |f| %>
            <div class="col-lg-12 col-md-12 col-sm-12 padding-reset form-group margin-top-sm">
              <%= f.label :fullname %><br />
              <%= f.text_field :fullname, autofocus: true, required: true, class: "form-control"%>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 padding-reset">
              <div class="form-group margin-top-sm col-lg-3 col-md-3 col-sm-12 padding-reset">
                <%= f.label :country%><br />
                <%= country_select( "donor", :country, { include_blank: 'Select your country',format: :with_country_code},{ class: 'form-control'}) %>
              </div>

              <div class="form-group margin-top-sm col-lg-offset-1 col-md-offset-1 col-lg-8 col-md-8 col-sm-12 padding-reset">
                <%= f.label  :phone_number %>
                <%#= f.select :gender, [['MALE', :male], ['FEMALE', :female]], {},{class: "form-control"} %>
                <%= f.text_field :phone, class: "form-control"%>
              </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 padding-reset form-group margin-top-sm">
              <%= f.label :email %><br />
              <%= f.email_field :email, required: true , class: "form-control"%>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12 padding-reset form-group form-group margin-top-sm">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control" %>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12 padding-reset form-group form-group margin-top-sm">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", required: true, class: "form-control" %>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12 padding-reset form-group form-group margin-top-sm">
              <%= f.submit "Sign up", class:"btn btn-crwd-primary" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="modal-footer">
        <p class="text-center margin-top-sm">Already registered?
          <a href="#" data-toggle="modal" class="link-crwd" data-dismiss="modal" data-target="#signinModal">Sign In</a>
        </p>
      </div>

    </div>
  </div>
</div>
