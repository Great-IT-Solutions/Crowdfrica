<div class="modal fade" id="signinModal" tabindex="-1" role="dialog" aria-labelledby="signinModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h3 class="modal-title text-center" id="signinModalLabel">Sign in</h3>
      </div>
      <div class="modal-body row">
        <div class="col-lg-offset-1 col-md-offset-1 col-lg-10 col-md-10 col-sm-12">

        <div class="text-center margin-top-sm">
           <%= link_to "<i class='fa fa-facebook-official fa-lg margin-right-md'></i>Login with Facebook".html_safe, donor_facebook_omniauth_authorize_path, class: 'btn btn-lg btn-facebook' %>
        </div>

        <div class="word-with-line text-center">
          <span>Or</span>
        </div>


          <%= form_for(Donor.new, as: :donor, url: session_path(:donor),:remote=>true,:html=>{:id=>'sign_in'}) do |f| %>
            <div class="form-group margin-top-sm">
                 <%= f.label :email %>
                 <%= f.email_field :email, autofocus: true, class:"form-control",:placeholder=>"Email",:required=>true %>
            </div>

            <div class="form-group margin-top-sm">
                 <%= f.label :password %>
                 <%= f.password_field :password, autocomplete: "off", class:"form-control",:placeholder=>"Password",:required=>true %>
            </div>

            <div class="form-group margin-top-sm">
              <%= f.submit "Sign in", class:"btn btn-crwd-primary" %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="modal-footer">

        <p class="text-center margin-top-sm">Don't have an account?
          <a href="#signupModal" class="link-crwd" data-toggle="modal" data-dismiss="modal">Sign Up</a>
        </p>
      </div>

    </div>
  </div>
</div>
